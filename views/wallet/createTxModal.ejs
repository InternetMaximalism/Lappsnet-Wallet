<div class="modal" id="createTxModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Create transaction</h5>
        
      </div>
      <div class="modal-body">
        <form>
          <fieldset>
            <legend class="mb-3">Create your own transaction below.</legend>
            <div class="form-group row formRow" id="createTxTypeForm">
              <div class="col-sm-4">
                <label for="createTxType">Transaction type</label>
              </div>
              <div class="col-sm-8">
                <div class="form-group" role="group">
                  <div class="form-check-inline">
                    <label class="form-check-label">
                      <input type="radio" class="form-check-input" name="selectTxType" id="satTxRadio" value="1">Send ESAT
                    </label>
                  </div>
                  <div class="form-check-inline">
                    <label class="form-check-label">
                      <input type="radio" class="form-check-input" name="selectTxType" id="tokenTxRadio" value="2">Send token
                    </label>
                  </div>
                </div>
              </div>
            </div>
            <div class="form-group row formRow" id="createTxTokenContractForm">
              <div class="col-sm-4">
                <label for="createTxTokenContract">(Token) contract address</label>
              </div>
              <div class="col-sm-8">
                <input type="text" class="form-control w-100" id="createTxTokenContract"></input>
              </div>
            </div>
            <div class="form-group row formRow" id="createTxFromAddressForm">
              <div class="col-sm-4">
                <label for="createTxFromAddress">Sender address</label>
              </div>
              <div class="col-sm-8">
                <input type="text" class="form-control w-100" id="createTxFromAddress"></input>
              </div>
            </div>
            <div class="form-group row formRow" id="createTxToAddressForm">
              <div class="col-sm-4">
                <label for="createTxToAddress">Destination address</label>
              </div>
              <div class="col-sm-8">
                <input type="text" class="form-control w-100" id="createTxToAddress"></input>
              </div>
            </div>
            <div class="form-group row formRow" id="createTxValueForm">
              <div class="col-sm-4">
                <label for="createTxValue">Transaction Value (in tokens)</label>
              </div>
              <div class="col-sm-8">
                <input type="text" class="form-control w-100" id="createTxValue"></input>
              </div>
            </div>
            <div class="form-group row formRow" id="createTxDataForm">
              <div class="col-sm-4">
                <label for="createTxData">Transaction Data</label>
              </div>
              <div class="col-sm-8">
                <input type="text" class="form-control w-100" id="createTxData"></input>
              </div>
            </div>
            <div class="form-group row formRow" id="createTxGasLimitForm">
              <div class="col-sm-4">
                <label for="createTxGasLimit">Gas Limit (in wei)</label>
              </div>
              <div class="col-sm-8">
                <input type="text" class="form-control w-100" id="createTxGasLimit"></input>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary createTxBtn">
          <span class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true" id="createTxSpinner"></span>
          Sign & Send
        </button>
        <button type="button" class="btn btn-secondary cancelCreateTx" data-bs-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>